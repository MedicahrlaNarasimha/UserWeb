@model IEnumerable<User>
@{ Layout = "_Layout"; ViewBag.Title = "All Users";}

<h2>All Users</h2>
<a asp-action="Create" class="btn btn-sm btn-primary">Add New User</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.FirstName</td>
                <td>@u.LastName</td>
            </tr>
        }
    </tbody>
</table>